{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "clang++ -std=c++20 -glldb -fstandalone-debug -I../include -I../../bigint/include -I../../lexer -I../../locators/include -I../../compilation_log/include *.cpp ../*.cpp ../../{bigint,compilation_log,lexer,locators}/*.cpp -lpthread -lgtest -o ${fileBasenameNoExtension}.bin"
        },
        {
            "label": "Compile G++",
            "type": "shell",
            "command": "g++ -ggdb ${relativeFile} -o ${fileBasenameNoExtension}.bin"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -f ${fileBasenameNoExtension}{,.bin}"
        }
    ]
}
